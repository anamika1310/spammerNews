<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blogspot.addictioncodes.news">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/location_news"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/location_news"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.blogspot.addictioncodes.news.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.blogspot.addictioncodes.news.Article"
            android:label="Article"
            android:parentActivityName="com.blogspot.addictioncodes.news.MainActivity"></activity>
    </application>

</manifest>